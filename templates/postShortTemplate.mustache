<div class="views-row views-row-1 views-row-odd views-row-first">
  <div id="node-{{post.id}}" class="node node-article node-promoted node-teaser clearfix" about="/{{{post.slug}}}" typeof="sioc:Item foaf:Document">
    <h2><a href="/{{{post.slug}}}">{{{post.title}}}</a></h2>
    <span property="dc:title" content="{{{post.title}}}" class="rdf-meta element-hidden"></span>
    <div class="submitted">
      <span property="dc:date dc:created" content="{{post.created}}" datatype="xsd:dateTime" rel="sioc:has_creator">Submitted by <span class="username" xml:lang="" typeof="sioc:UserAccount" property="foaf:name" datatype="">{{post.author}}</span> on {{post.created_human}}</span>
    </div>
    <div class="content">
      <div class="field field-name-body field-type-text-with-summary field-label-hidden">
        <div class="field-items">
          <div class="field-item">
            {{{post.body_short}}}
          </div>
        </div>
      </div>
    </div>
    <ul class="links inline">
      <li class="node-readmore first last">
        <a href="/{{{post.slug}}}" rel="tag" title="{{{post.title}}}">Read more<span class="element-invisible"> about {{{post.title}}}</span></a>
      </li>
    </ul>
  </div>
</div>
